<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_Completed_Status_For_Future_Event</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Event_Status__c, &quot;Completed&quot;) &amp;&amp; Event_Date__c &gt; TODAY()</errorConditionFormula>
    <errorDisplayField>Event_Status__c</errorDisplayField>
    <errorMessage>You cannot mark an Event as Completed if the Event Date is in the future.</errorMessage>
</ValidationRule>
